{% embed 'partials/base.html.twig' %}

  {% do assets.addCss('theme://css-compiled/contact.css', 98) %}

  {% block content %}

  <div id="contact">
    <div class="container">
      <div class="section_header">
        <h3>{{ form.message }}</h3>
      </div>
      <div class="row contact">
        {{ page.content }}
        <div class="col-md-7">
          {{ content }}
          <p>Here is the summary of what you wrote to us:</p>
          {% include "forms/data.html.twig" %}
        </div>
        <div class="col-md-5">
          <div class="map">
            <div class="box_wrapp">
              <div class="box_cont">
                <div class="head">
                  <h6>Contact</h6>
                </div>
                <ul class="street">
                  <li>{{ config.details.address1 }}</li>
                  <li>{{ config.details.address2 }}</li>
                  {% for phone in config.details.phone  %}
                    <li class="icon icontop">
                      <span class="contacticos ico1"></span>
                      <span class="text">{{ phone }}</span>
                    </li>
                  {% endfor %}
                  {% for email in config.details.email  %}
                    <li class="icon icontop">
                      <span class="contacticos ico2"></span>
                      <span class="text">{{ email }}</span>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  {% endblock %}

{% endembed %}
