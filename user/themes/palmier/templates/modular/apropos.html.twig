
<div id="aboutus">
  <div class="container">
    <div class="section_header">
      <h3>{{ page.header.title }}</h3>
    </div>
    <div class="row">
      <div class="col-sm-6 intro">{{ content }}</div>
      <div class="col-sm-6">
        <div class="flexslider">
          <ul class="slides">
            {% for slide in page.header.slides %}
            <li><img src="{{ page.media[slide.image].url }}" /></li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
{% do assets.addJs('theme://js/flexslider.js', {'priority':102, 'group':'bottom'}) %}
